CREATE TABLE OKSANA.SYSTEMS
(
    ID NUMBER(10) GENERATED ALWAYS AS IDENTITY (START WITH 1 INCREMENT BY 1) NOT NULL,
    CREATED DATE default CURRENT_TIMESTAMP NOT NULL,
    UPDATED DATE default CURRENT_TIMESTAMP NOT NULL,
    SYSTEM_NAME VARCHAR2(255) NOT NULL,
    SYSTEM_DESCRIPTION VARCHAR2(255) NOT NULL,
    DB_CONNECTION_STRING VARCHAR2(255) NULL,
    constraint systems_ID PRIMARY KEY (ID),
    constraint systems_SYSTEM_NAME
        unique (SYSTEM_NAME),
    constraint systems_DB_CONNECTION_STRING
        unique (DB_CONNECTION_STRING)
);
CREATE SEQUENCE SYSTEMS_SEQUENCE;

